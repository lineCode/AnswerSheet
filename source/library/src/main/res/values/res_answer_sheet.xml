<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="color_answer_view_toggle_off">#d35400</color>
    <color name="color_answer_view_toggle_on">#7f8c8d</color>

    <string name="answer_a">A</string>
    <string name="answer_b">B</string>
    <string name="answer_c">C</string>
    <string name="answer_d">D</string>

    <style name="AnswerViewParent">
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AnswerView" parent="AnswerViewParent">
        <item name="android:textColor">@color/color_answer_view_toggle_off</item>
        <item name="android:background">@drawable/selector_answer_view_unchecked</item>
    </style>

    <style name="TextViewQuestionIndex">
        <item name="android:textSize">18sp</item>
    </style>
</resources>